<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/navbar.ejs') %>

<div id="navbar-wrapper" style="position: fixed;">
    <nav class="navbar navbar-inverse bg-primary">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/" class="navbar-brand"><b>Система учета посещаемости студентов</b></a>
            </div>
        </div>
    </nav>
</div>

<section id="content-wrapper">
    <main role="main" class="pt-5 main">
        <div class="header text-center pt-5 pt-lg-4">
            <h1>Студент <span style="color: orangered;">Войти</span></h1>
        </div>
        <hr>
        <div class="container">
            <div class="row">
                <div class="col-md-6 m-auto">
                    <div class="card card-body" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Вход</h1>
                        <%- include('../Includes/messages') %>
                        <form action="/student/login" method="POST">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" class="form-control"
                                    placeholder="Enter Email" />
                            </div>
                            <div class="form-group">
                                <label for="password">Пароль</label>
                                <input type="password" id="password" name="password" class="form-control"
                                    placeholder="Enter Password" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Войти</button>
                        </form>
                        <!-- <p class="lead">
                            Забыли пароль? <a href="/student/forgot-password">Сгенерировать новый пароль</a>
                        </p> -->
                    </div>
                </div>
            </div>
        </div>

    </main>
</section>
<%- include('../Includes/end.ejs') %>