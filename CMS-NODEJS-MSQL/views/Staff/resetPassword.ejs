<%- include('../Includes/begin.ejs') %>
    <%- include('../Includes/navbar.ejs') %>

        <div class="container pt-5">
            <div class="container pt-5">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-10">
                        <div class="card shadow p-3 mb-5 bg-white rounded">
                            <div class="forgot p-3">
                                <h2>Сбросить пароль</h2>
                                <p>Измените свой пароль.</p>
                                <p>ПРИМЕЧАНИЕ: Срок действия ссылки истечет через 20 минут</p>

                            </div>
                            <%- include('../Includes/messages') %>
                                <form class="card" role="form" method="POST" action="/student/resetpassword?_method=PUT">
                                    <div class="card-body">
                                        <div class="form-group"> <label for="password">Введите новый пароль</label>
                                            <input class="form-control" type="password" name="password" id="password"
                                                required><small class="form-text text-muted">Введите новый пароль</small>
                                        </div>
                                        <div class="form-group"> <label for="confirm-password">Подтвердите новый пароль</label>
                                            <input class="form-control" type="password" name="confirmPass" id="confirmPass"
                                                required><small class="form-text text-muted">Подтвердите новый пароль</small>
                                        </div>
                                    </div>
                                    <input type="hidden" class="hide" name="resetLink" id="resetLink"
                                        value="<%= resetLink %>">
                                    <button class="btn btn-primary btn-block" type="submit">Изменить пароль</button>
                                </form>
                                <hr>
                                <button class="btn btn-danger" onclick="location.href = '/student/login'">Назад</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <%- include('../Includes/end.ejs') %>